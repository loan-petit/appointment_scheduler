{
  "name": "prisma",
  "version": "1.0.0",
  "description": "Appointment scheduler project GraphQL API",
  "main": "src/server.js",
  "scripts": {
    "start": "DOTENV_CONFIG_PATH=.env node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "dev": "DOTENV_CONFIG_PATH=.env ts-node-dev --no-notify --respawn --transpileOnly src/server",
    "format": "prettier-standard --format"
  },
  "dependencies": {
    "@nexus/schema": "0.17.0",
    "@prisma/client": "^2.8.1",
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "12.19.2",
    "@types/ws": "7.2.9",
    "bcryptjs": "2.4.3",
    "google-auth-library": "^6.1.3",
    "graphql-middleware": "4.0.2",
    "graphql-shield": "7.3.8",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "nexus-plugin-prisma": "0.23.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "@prisma/cli": "^2.8.1",
    "prettier-standard": "^16.4.1",
    "ts-node-dev": "1.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
