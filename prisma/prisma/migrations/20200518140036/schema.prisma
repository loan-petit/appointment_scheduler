datasource db {
  provider = "postgresql"
  url = "***"
  default  = true
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      Int                         @default(autoincrement()) @id
  email                   String                      @unique
  firstName               String
  lastName                String
  password                String
  websiteUrl              String?
  address                 String?
  minScheduleNotice       Int                         @default(0)
  events                  Event[]
  recurrentAvailabilities RecurrentAvailabilitySlot[]
  availabilities          AvailabilitySlot[]
}

model Event {
  id                  Int     @default(autoincrement()) @id
  name                String
  description         String?
  duration            Int
  price               Float?
  generateClientSheet Boolean @default(false)
  user                User?   @relation(fields: [userId], references: [id])
  userId              Int?
}

model RecurrentAvailabilitySlot {
  id        Int    @default(autoincrement()) @id
  day       String
  startTime Int
  endTime   Int
  user      User?  @relation(fields: [userId], references: [id])
  userId    Int?
}

model AvailabilitySlot {
  id        Int      @default(autoincrement()) @id
  date      DateTime
  startTime Int
  endTime   Int
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}